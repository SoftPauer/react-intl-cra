{
  "name": "react-intl-cra",
  "version": "0.4.0",
  "description": "Extract messages of `Creact React App` from the command line",
  "repository": "https://github.com/evenchange4/react-intl-cra",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "files": [
    "src",
    "bin"
  ],
  "main": "src/index.js",
  "bin": {
    "react-intl-cra": "bin/index.js"
  },
  "scripts": {
    "test": "NODE_ENV='test' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "eslint": "eslint ./",
    "format": "prettier --write 'src/**/*.{js,json}' 'bin/**/*.{js,json}' 'tests/**/*.{js,json}' '*.md'",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report",
    "precommit": "lint-staged",
    "changelog": "github-changes -o evenchange4 -r react-intl-cra -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "babel-plugin-formatjs": "^10.3.1",
    "chalk": "^4.1.1",
    "glob": "^7.1.7",
    "ramda": "^0.27.1",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "codecov": "^3.8.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "^5.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "flow-bin": "^0.154.0",
    "flow-coverage-report": "^0.8.0",
    "github-changes": "^2.0.2",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "flow-coverage-report": {
    "excludeGlob": [
      "node_modules/**"
    ],
    "includeGlob": [
      "src/**/*.js",
      "bin/**/*.js"
    ],
    "threshold": 90,
    "type": "text"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "prettier",
      "prettier/flowtype",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
